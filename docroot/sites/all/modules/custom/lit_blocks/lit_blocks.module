/**
 * Implements hook_block_info().
 */
function lit_blocks_block_info() {
  $blocks['landing_page_options'] = array(
    'info' => t('Landing page options'),
    'cache' => DRUPAL_NO_CACHE
    // DRUPAL_CACHE_PER_ROLE will be assumed.
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function lit_blocks_block_view($delta = '') {
  // This example is adapted from node.module.
  $block = array();

  switch ($delta) {
    case 'landing_page_options':
      //$block['subject'] = t('Landing Page Options');
      $block['subject'] = '';
      $output = array(
      	'blokcito01' => array(
          '#type' => 'markup',
          '#prefix' => '<div class="blokcito">',
          '#suffix' => '</div>',
      		'#markup' => '<p>Hola, chicos (1) !</p>',
        ),
      	'blokcito02' => array(
          '#items' => array('Do this', 'Do that', 'Do the other!'),
          '#theme' => 'item_list',
          '#prefix' => '<div class="blokcito">',
          '#suffix' => '</div>',
        ),
      	'blokcito03' => array(
          '#type' => 'markup',
          '#prefix' => '<div class="blokcito">',
          '#suffix' => '</div>',
      		'#markup' => '<p>Hola, chicos (3) !</p>',
        ),
      );
      $block['content'] = $output;
      break;
  }
  return $block;
}
