/**
 * Implements hook_block_info().
 */
function lit_blocks_block_info() {
  $blocks['landing_page_options'] = array(
    'info' => t('Landing page options'),
    'cache' => DRUPAL_NO_CACHE
    // DRUPAL_CACHE_PER_ROLE will be assumed.
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function lit_blocks_block_view($delta = '') {
  // This example is adapted from node.module.
  $block = array();

  switch ($delta) {
    case 'landing_page_options':
    	$module_path = drupal_get_path('module', 'lit_blocks');
    	$full_path = $module_path .'/lit_blocks.css';
    	drupal_add_css($full_path);
      //$block['subject'] = t('Landing Page Options');
      $block['subject'] = '';
      $output = array(
      	'blokcito01' => array(
   			  '#type' => 'link',
   			  '#title' => 'About Literary Workshop',
      		'#href' => 'section/what-is-literary-workshop',
          '#prefix' => '<div class="blokcito"><p>',
      		'#suffix' => ' Find out about our community!</p></div>',
        ),
      	'blokcito02' => array(
   			  '#type' => 'link',
   			  '#title' => 'Sign up as a Literary Workshop member',
      		'#href' => 'user/register',
          '#prefix' => '<div class="blokcito"><p>Critique and be critiqued! ',
      		'#suffix' => '</p></div>',
        ),
      	'blokcito03' => array(
          '#type' => 'markup',
          '#prefix' => '<div class="blokcito">',
          '#suffix' => '</div>',
      		'#markup' => '<p>Participate right now! Just try out the demo for yourself!</p>',
        ),
      );
      $block['content'] = $output;
      break;
  }
  return $block;
}
